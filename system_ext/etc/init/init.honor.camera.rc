on post-fs-data
#add for camera
    mkdir /data/img
    chown system camera /data/img
    chmod 0775 /data/img
    chmod 0775 /data/img/adaptdata.txt

on early-boot

on property:msc.servicehost.needstartprocess=true
    start HwServiceHost

#start servicehost as product config
service HwServiceHost /system/bin/HwServiceHost sdm4250 PKU
    class main
    user cameraserver
    group audio camera inet net_bt net_bt_admin net_bw_acct drmrpc mediadrm system vendor_dsm sdcard_rw
    disabled